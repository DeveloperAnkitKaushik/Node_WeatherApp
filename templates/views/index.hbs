<!DOCTYPE html>
<html lang="en">

<head>
{{>headerlinks}}
</head>

<body>
    {{>navbar}}
    <!-- Main Header -->
    <div class="container-flud main_header">
        <div class="row">
            <div class="col-md-10 col-12 mx-auto">
                <div class="row">
                    <!-- left div -->
                    <div class="col-md-6 col-12 main_header_left">
                        <p>Welcome to Weather App</p>
                        <h1>Get The Latest <span> Weather </span> Info Of Your City</h1>
                        <a href="/weather"><button>Check Now</button></a>
                    </div>

                    <!-- right div -->
                    <div class="col-md-6 col-12 main_header_right">
                        <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
                            <div class="carousel-inner">
                                <div class="carousel-item active">
                                    <img class="d-block" src="./images/h.png" alt="First slide">
                                </div>
                                <div class="carousel-item">
                                    <img class="d-block" src="./images/h1.jpg" alt="Second slide">
                                </div>
                                <div class="carousel-item">
                                    <img class="d-block" src="./images/h2.jpg" alt="Third slide">
                                </div>
                            </div>
                            <a class="carousel-control-prev" href="#carouselExampleControls" role="button"
                                data-slide="prev">
                                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                <span class="sr-only">Previous</span>
                            </a>
                            <a class="carousel-control-next" href="#carouselExampleControls" role="button"
                                data-slide="next">
                                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                <span class="sr-only">Next</span>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    {{>footer}}
    {{>scriptlinks}}
</body>

</html>